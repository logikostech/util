{
  "name": "logikos/util",
  "homepage": "https://github.com/logikostech/util",
  "description": "Utility Classes, including a config similar to Phalcon\\Config, MutableConfig and ImmutableConfig",
  "type": "library",
  "license": "MIT",
  "authors": [{
    "name": "Todd Empcke",
    "email": "tempcke@logikostech.net"
  }],
  "require": {
    "php": "^5.6 || ^7.0"
  },
  "require-dev": {
    "phpunit/phpunit": "^5.7",
    "phpstan/phpstan": "^0.8.5"
  },
  "autoload": {
    "psr-4": {
      "Logikos\\Util\\": "src/",
      "Logikos\\Util\\Tests\\": "tests/"
    }
  },
  "scripts": {
    "test": "vendor/bin/phpunit",
    "phpstan": "vendor/bin/phpstan analyse src --level=7"
  }
}
